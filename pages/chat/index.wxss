page {background-color: #E4E4E4;}
#screenVisible {position: absolute;top: 0;left: 0;width: 100%;height: 100%;display: block;z-index: 0;background-color:transparent;}
.container {position: relative;top: 0;left: 0;width: 100%;height: 100%;display: block;padding: 0 0 5rem;z-index: 99;}
.top-font {}
.top-font text {font-size: 0.7rem;color: #fff;background-color: #bbb;display: block;margin: 0 auto;width: 4rem;text-align: center;margin: 0.5rem auto;border-radius: 10rpx;padding: 0.1rem 0;}
.chat-items {width: 100%;height: auto;}
.chat-items .item {margin: 1rem 0 0;}
.chat-items .item .portrait {text-align: center;padding: 0.4rem 0 0;}
.chat-items .item .portrait image {max-width: 80%;height: auto;border-radius: 50%;}
.chat-items .item .kfc {font-size: 0.8rem;}
.chat-items .item .kfc .wrap {width: 88%;height: auto;margin: 0 0 0 2%;}
.chat-items .item .kfc .wrap>text {color: #666;font-size: 0.7rem;}
.chat-items .item .kfc .c {background-color: #fff;border:1px solid #cfcfcf;border-radius:15rpx;padding:3.5%;line-height:1.2rem;font-size:0.75rem;margin: 0.2rem 0 0;position: relative;border-left: 0;border-right: 0;}
.chat-items .item .kfc .c::after {content: '';display: block;width: 0;height: 0;border-right: 0.4rem solid #fff;border-bottom: 0.4rem solid transparent;border-top: 0.4rem solid transparent;position: absolute;top: 15%;left: -0.25rem;}
.chat-items .item .kfc .c text {color: #000;}

.btm-input {border-top: 1rpx solid #ccc;position: fixed;left: 0;bottom: 0;height:auto;padding:4% 0;background-color: #E4E4E4;z-index: 199;}
.btm-input>view {text-align: right;}
.btm-input>view+view {text-align: center;}
.btm-input .input-chat {border:1px solid #cecece;width: 95%;height: 2.2rem;line-height: 2.2rem;margin: 0 auto;background-color: #fff;border-radius: 10rpx;font-size: 1rem;padding: 0 0 0 2%;font-size: 1rem; }
.plcolor {color: #000;}
.btm-input button {width: auto;border: 0;height: auto;padding-left: 0;padding-right: 0;margin: 0;text-align: left;border-radius: 0;background-color: transparent;}
.btm-input button::after {border: 0;padding: 0;}
.btm-input button.send {border-radius: 10rpx;background-color: #1AAD16;color: #fff;padding-top: 0;padding-bottom: 0;padding-left: 0;padding-right: 0;padding: 0.45rem 0.4rem;line-height:1.3rem;width:80%;text-align: center;margin: 0 auto;}
.btm-input button.send::after {border: 0;border-radius: 0;padding-top: 0;padding-bottom: 0;padding-left: 0;padding-right: 0;}